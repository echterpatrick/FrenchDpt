<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème principal de l'application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Style pour le champ de saisie du code département -->
    <style name="DepartmentEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Style pour les boutons du clavier personnalisé -->
    <style name="KeyboardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <!-- Style pour le TextView d'affichage du résultat -->
    <style name="ResultText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
